# =============================================
# PUBLIC VARIABLES (exposed to browser)
# Must start with PUBLIC_ for SvelteKit
# =============================================

PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxxxxxxxxx
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx
PUBLIC_SITE_URL=http://localhost:5173

# =============================================
# PRIVATE VARIABLES (server-side only)
# Never exposed to browser
# =============================================

# Supabase
SUPABASE_SECRET_KEY=sb_secret_xxxxxxxxxx

# Stripe
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# Resend (Email)
RESEND_API_KEY=re_xxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Bunny.net (Image CDN & Video Hosting)
PUBLIC_BUNNY_STORAGE_ZONE=skyler-storage
PUBLIC_BUNNY_CDN_URL=https://skyler-storage.b-cdn.net
BUNNY_API_KEY=<your-bunny-storage-api-key>
BUNNY_READ_ONLY_PASSWORD=<your-bunny-read-only-password>

# Bunny.net Stream (Video Library)
# Get this from: Stream > Your Library > API > Library API Key
BUNNY_VIDEO_LIBRARY_ID=556030
BUNNY_VIDEO_API_KEY=<your-bunny-video-library-api-key>

# Admin Configuration
# First user with this email becomes admin
ADMIN_EMAIL=admin@example.com

# Contact Form
# Where contact form submissions are sent (falls back to ADMIN_EMAIL)
CONTACT_EMAIL=contact@example.com

# =============================================
# NODE ADAPTER (Production)
# =============================================

ORIGIN=http://localhost:3000
PORT=3000
HOST=0.0.0.0
BODY_SIZE_LIMIT=10M
