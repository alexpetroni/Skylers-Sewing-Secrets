{
  "$schema": "https://opencode.ai/config.json",
    "provider": {
    "zai-coding-plan": {
      "models": {
        "glm-4.7": {
          "id": "glm-4.7",
          "options": {
            "maxTokens": 4000,
            "temperature": 0.35
          }
        }
      }
    }
  },
   "model": "zai-coding-plan/glm-4.7",
    "agent": {
        "build": {
          "mode": "primary",
          "model": "zai-coding-plan/glm-4.7",
          "tools": {
            "write": true,
            "edit": true,
            "bash": true
          }
    },
        "plan": {
          "mode": "primary",
          "model": "zai-coding-plan/glm-4.7",
          "tools": {
            "write": false,
            "edit": false,
            "bash": false
          }
        }
    },
  "mcp": { 
    "svelte-llm": {
                "type": "remote",
                "url": "https://svelte-llm.stanislav.garden/mcp/mcp",
                "enabled": true
                }
  }, 

}
